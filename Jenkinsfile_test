pipeline {
    agent any
    stages {
        stage('Check Git on Agents') {
            parallel {
                stage('Agent1') {
                    agent { label 'agent1' }
                    steps {
                        script {
                            sh '''
                                echo "Checking git on Agent 1..."
                                git --version || echo "Git is not installed on this agent."
                            '''
                        }
                    }
                }
                stage('Agent2') {
                    agent { label 'agent2' }
                    steps {
                        script {
                            sh '''
                                echo "Checking git on Agent 2..."
                                git --version || echo "Git is not installed on this agent."
                            '''
                        }
                    }
                }
            }
        }
    }
}
